{% extends "base.html.jinja" %}
{% block title %}Recipes of the day{% endblock %}
{% block content %}
{% for group in recipes_by_tag %}
{# Show a few example images from recipes in this tag #}
<h2>{{group.tag}}</h2>
<image-cards>
    {% for recipe in group.highlight_recipes %}
    <a href="/recipe/{{recipe.recipe_id}}">
        <image-card>
            <h4>{{recipe.name}}</h4>
            <img src="{{recipe.thumbnail | to_data_url }}" alt="{{recipe.name}}">
        </image-card>
    </a>
    {% endfor %}
</image-cards>
<ul class="long-list">
    {% for recipe in group.all_recipes %}
    <li><a href="/recipe/{{recipe.recipe_id}}">{{recipe.name}}</a></li>
    {% endfor %}
</ul>
{% if not loop.last %}
<hr>
{% endif %}
{% endfor %}
{% endblock %}