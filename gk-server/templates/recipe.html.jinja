{% extends "base.html.jinja" %}

{% block content %}
<full-recipe>
    {{ recipe.best_revision.rendered }}
</full-recipe>
<hr>
<h3> All Revisions </h3>
<revision-list>
    {% for revision in recipe.revisions %}
    <details>
        <summary>{{ revision.source_name }}</summary>
        {{ revision.content_text }}
    </details>
    {% endfor %}
</revision-list>
<hr>
<h3>Images</h3>
<image-cards>
    {% for image in recipe.images %}
    <a href="/image/{{ image.image_id }}">
        <image-card>
            <img src="/image/{{ image.image_id }}"
                alt="{{ loop.index }}" loading="lazy">
        </image-card>
    </a>
    {% endfor %}
</image-cards>

<h3>Tags</h3>
<ul class="pills">
    {% for tag in recipe.tags %}
    <li>{{ tag.tag }}</li>
    {% endfor %}
</ul>
{% endblock %}